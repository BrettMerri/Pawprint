<style type="text/css">
    .currentUserCommentAvatar {
        width:auto;
        height:38px;
        margin-right:2px;
    }
    .lead {
        margin-bottom:0px;
    }
    .post-controls {
        width:100%;
        height:25px;
    }
    .comment {
        margin-bottom:10px;
    }
    .comment-avatar {
        height:38px;
        width:auto;
    }
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
@if (ViewBag.Message != null)
{
    <div class="row">
        <div class="col-lg-12">
            <h2>@ViewBag.Message</h2>
        </div>
    </div>
}
<div class="row">
    <div class="col-sm-8">
        @if (ViewBag.PostList.Count == 0)
        {
            if (ViewBag.SearchInput != null)
            {
                <div class="page-header">
                    <h3>We are unable to find any posts using the Search Query: "@ViewBag.SearchInput".</h3>
                </div>
            }
            else
            {
                <div class="page-header">
                    <h2>Oh no! There are no posts in your feed!</h2>
                    <h3>Go <a href="/Home/Explore" alt="Explore">Explore</a> to find pets to follow!</h3>
                </div>
            }
        }
        @foreach (var item in ViewBag.PostList)
        {
            <div class="post">
                <div class="page-header">
                    <p>Posted by <span class="glyphicon glyphicon-user"></span> <a href="/Pets/Profile?PetID=@item.PetID">@item.Pet.Name</a> on <span class="glyphicon glyphicon-time"></span> @item.Date</p>
                </div>
                <figure class="margin-b-2">
                    <img class="img-responsive" style="border:1px solid black;" src="~/img/posts/@item.FilePath" alt="">
                </figure>
                <p class="lead">@item.Caption</p>
                <p>Likes: <span class="likeCount">@item.LikeCounts</span></p>
                @if (User.Identity.IsAuthenticated)
                {
                <div class="post-controls">
                    <div class="pull-right btn-group-xs">
                        @if (ViewBag.LikedPostIds.IndexOf(item.PostID) == -1)
                        {
                            <button class="like btn btn-default btn-xs" value="@item.PostID" onclick="LikePost.call(this);"><i class="fa fa-paw" aria-hidden="true"></i> <span class="likeText">Like</span></button>
                        }
                        else
                        {
                            <button class="like btn btn-default btn-xs" value="@item.PostID" onclick="UnlikePost.call(this);"><i class="fa fa-paw" aria-hidden="true"></i> <span class="likeText">Unlike</span></button>
                        }
                        @if (item.Pet.OwnerID == ViewBag.CurrentUser.ID)
                        {
                            <a href="/Pets/DeletePost?PostID=@item.PostID" onclick="return confirm('Are you sure?')" class="btn btn-default btn-xs"><i class="fa fa-close" aria-hidden="true"></i> Remove</a>
                        }
                    </div>
                </div>
                <div class="post-content">
                    @foreach (var comment in item.Comments)
                    {
                        <div class="comment">
                            @if (comment.AspNetUser.FilePath == null)
                            {
                                <a href="/User/Profile?DisplayName=@comment.AspNetUser.DisplayName">
                                    <img class="comment-avatar img-thumbnail" src="~/img/users/default_avatar.png" /><span class="commentDisplayName"> @comment.AspNetUser.DisplayName</span>
                                </a>
                            }
                            else
                            {
                                <a href="/User/Profile?DisplayName=@comment.AspNetUser.DisplayName">
                                    <img class="comment-avatar img-thumbnail" src="~/img/users/@comment.AspNetUser.FilePath" /><span class="commentDisplayName"> @comment.AspNetUser.DisplayName</span>
                                </a>
                            }
                            <span>: @comment.Text</span>
                            @if (comment.UserID == ViewBag.CurrentUser.ID)
                            {
                                <a href="/User/DeleteComment?CommentID=@comment.CommentID" onclick="return confirm('Are you sure?')" class="btn btn-default btn-xs"><i class="fa fa-close" aria-hidden="true"></i> Remove</a>
                            }
                        </div>
                    }
                    <form action="/User/Comment">
                        <div class="input-group" style="width:363px;">
                            @if (ViewBag.CurrentUser.FilePath == null)
                            {
                                <a href="~/User/Profile?DisplayName=@ViewBag.CurrentUser.DisplayName"><img class="currentUserCommentAvatar img-thumbnail" src="~/img/users/default_avatar.png" style="" /></a>
                            }
                            else
                            {
                                <a href="~/User/Profile?DisplayName=@ViewBag.CurrentUser.DisplayName"><img class="currentUserCommentAvatar img-thumbnail" src="~/img/users/@ViewBag.CurrentUser.FilePath" style="" /></a>
                            }
                            <label class="sr-only" for="commentInput">Comment</label>
                            <input type="hidden" name="PostID" value="@item.PostID" />
                            <input type="text" class="form-control" id="commentInput" name="CommentInput" placeholder="Comment" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <span class="glyphicon glyphicon-comment"></span>
                                    <span class="sr-only">Comment</span>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>

                }
            </div>
        }
    </div>
    <div class="col-sm-4">
        <div class="well">
            <h4 class="margin-t-0">Search</h4>
            <form action="/Home/Search">
                <div class="input-group">
                    <label class="sr-only" for="search-form">Search the site</label>
                    <input type="text" class="form-control" id="search-form" name="SearchInput" >
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                            <span class="sr-only">Search</span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
        <!-- Panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Newest pets!</h4>
            </div>
            <div class="panel-body">
                @foreach (var pet in ViewBag.NewestPets)
                {
                    <p>@pet.Name</p>
                }
            </div>
        </div>
        <!-- Panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Something else</h4>
            </div>
            <div class="panel-body">
                <p>test</p>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/LikePost.js"></script>