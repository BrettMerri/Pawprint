@model Pawprint.Models.Post
@{
    ViewBag.Title = "AddNewPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Post</h2>


<form action="SaveNewPost" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="uploadFile">File</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" name="uploadFile" type="file" />
                <span class="field-validation-valid text-danger" data-valmsg-for="uploadFile" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Caption, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Caption, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Caption, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" id="PetID" name="PetID" value="@ViewBag.PetID" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
