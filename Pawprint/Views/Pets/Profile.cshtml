@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Profile.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="mainbody container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="media">
                        <div align="center">
                            <img class="thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" />
                        </div>
                        @if (ViewBag.EditProfile == true)
                        {
                            <h3 class="small-header"><a href="#">Change avatar</a></h3>
                        }
                        <div class="media-body">
                            <hr />
                            <h3><strong>Name</strong></h3>
                            <p>@Model.Name</p>
                            <hr />
                            <h3><strong>Breed</strong></h3>
                            <p>@Model.Breed</p>
                            <hr />
                            <h3><strong>Color</strong></h3>
                            <p>@Model.Color</p>
                            <hr />
                            <h3><strong>Birthday</strong></h3>
                            <p>@Model.BirthDay</p>
                            @if (Model.FavoriteFood != null)
                            {
                                <hr />
                                <h3><strong>Favorite Food</strong></h3>
                                <p>@Model.FavoriteFood</p>
                            }
                            @if (ViewBag.EditProfile == true)
                            {
                                <hr class="small-hr" />
                                <h4 class="small-header"><a href="#">Edit Profile</a></h4>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            
            @if (ViewBag.PostList.Count == 0)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4>This pet has no posts! :(</h4>
                        @if (ViewBag.EditProfile == true)
                        {
                            <h4><a href="/Pets/AddNewPost?PetID=@Model.PetID">Add your first Post!</a></h4>
                        }
                    </div>
                </div>
            }
            else
            {
                if (ViewBag.EditProfile == true)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                           <h4><a href="/Pets/AddNewPost?PetID=@Model.PetID">Add your first Post!</a></h4>
                        </div>
                    </div>
                }
                foreach (var item in ViewBag.PostList)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="pull-left">
                                <a href="#">
                                    <img class="media-object img-circle" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" style="margin-right:8px; margin-top:-5px; width:50px; height:50px;">
                                </a>
                            </div>
                            <h4><a href="#" style="text-decoration:none;"><strong>@Model.PetID</strong></a> – <small><small><a href="#" style="text-decoration:none; color:grey;"><i><i class="fa fa-clock-o" aria-hidden="true"></i> @item.Date</i></a></small></small></h4>
                            <hr />
                            <div class="post-content">
                                <img class="img-responsive" src="~/img/posts/@item.FilePath" alt="" />
                                <p>@item.Caption</p>
                            </div>
                            
                            <hr>

                            <div>
                                <div class="pull-right btn-group-xs">
                                    <a class="btn btn-default btn-xs"><i class="fa fa-heart" aria-hidden="true"></i> Like</a>
                                    <a class="btn btn-default btn-xs"><i class="fa fa-comment" aria-hidden="true"></i> Comment</a>
                                </div>
                                <br>
                            </div>
                            <hr>
                            <div class="media">
                                <div class="pull-left">
                                    <a href="#">
                                        <img class="media-object img-circle" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" style="margin-left:3px; margin-right:-5px; width:35px; height:35px;" />
                                    </a>
                                </div>
                                <div class="media-body">
                                    <textarea class="form-control" rows="1" placeholder="Comment"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
