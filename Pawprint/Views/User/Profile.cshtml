@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<a href="/User/AddNewPet">Add a new Pet!</a>
<br />

<link rel="stylesheet" href="~/Content/Profile.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="mainbody container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="media">
                        <div align="center">
                            <img class="thumbnail img-responsive" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" />
                        </div>
                        <div class="media-body">
                            <hr>
                            <h3><strong>Bio</strong></h3>
                            <p>Unknown</p>
                            <hr>
                            <h3><strong>Location</strong></h3>
                            <p>Unknown</p>
                            <hr>
                            <h3><strong>Gender</strong></h3>
                            <p>Unknown</p>
                            <hr>
                            <h3><strong>Birthday</strong></h3>
                            <p>Unknown</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 style="margin:0;">Pets</h3>
                    <hr />
                    @if (ViewBag.PetList.Count == 0)
                    {
                        <h4>You have no pets!</h4>
                    }
                    else
                    {
                        foreach (var pet in ViewBag.PetList)
                        {
                            <h4><a href="/Pets/Profile?PetID=@pet.PetID">@pet.Name</a></h4>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>