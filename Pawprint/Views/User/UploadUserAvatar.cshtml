@model Pawprint.Models.AspNetUser

@{
    ViewBag.Title = "UploadUserAvatar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UploadUserAvatar</h2>

 
    <form action="SaveUserAvatar" method="post" enctype="multipart/form-data">
        
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Post</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="uploadFile">File</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" name="uploadFile" type="file" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="uploadFile" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        </form>
        

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
