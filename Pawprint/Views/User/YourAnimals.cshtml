
@{
    ViewBag.Title = "YourAnimals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Animals</h2>

<table >
    @foreach (var element in ViewBag.PetList)
    {
        <tr>
            <td>@element.Name</td>
            <td><a href="/User/DeletePet?Name=@element.Name" onclick="return confirm('Are you sure?')"><span class="glyphicon glyphicon-remove"></span></a></td>

            
        </tr>
    }

</table>

